<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div do %>
    <h3><%= pluralize(resource.errors.count, "error") %> detected:</h3>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
