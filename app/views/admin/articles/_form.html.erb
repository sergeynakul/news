<%= form_with(model: [:admin, article], local: true) do |form| %>
  <%= render 'shared/errors', resource: article %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="field">
    <%= form.label :visibility %>
    <%= form.select :visibility, ['private', 'public'], selected: 'private' %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
